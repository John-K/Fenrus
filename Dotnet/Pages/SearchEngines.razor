@page "/settings/search-engines"
@page "/settings/system/search-engines"
@inherits CommonPage<Fenrus.Models.SearchEngine>

<PageTitle>Fenrus - @Title</PageTitle>

<FenrusPage Title="@Title" Icon="fa-solid fa-magnifying-glass" PageDescription="@Description">
    <Body>
    
    <FenrusTable TItem="Models.SearchEngine" Data=@Items>
        <ToolBar>
            <FenrusTableButton Label="Add" Icon="fa-solid fa-plus" Clicked="() => Add()" />
        </ToolBar>
        <Columns>
            <FenrusTableColumn TItem="Models.SearchEngine" ColumnName="Name">
                <Header>Name</Header>
                <Cell Context="item">
                    <a href="/settings/search-engines/@item.Uid">@item.Name</a>
                </Cell>
            </FenrusTableColumn>
            <FenrusTableColumn TItem="Models.SearchEngine" ColumnName="IsDefault" Width="10rem">
                <Header>Default</Header>
                <Cell Context="item">
                    <FenrusSwitch @bind-Value="@item.IsDefault"></FenrusSwitch>
                </Cell>
            </FenrusTableColumn>
            <FenrusTableColumn TItem="Models.SearchEngine" ColumnName="Enabled" Width="10rem">
                <Header>Enabled</Header>
                <Cell Context="item">
                    <FenrusSwitch @bind-Value="@item.Enabled"></FenrusSwitch>
                </Cell>
            </FenrusTableColumn>
            <FenrusTableColumn TItem="Models.SearchEngine" ColumnName="Actions" Width="10rem">
                <Header></Header>
                <Cell Context="item">
                    <div class="actions">
                        <a title="Edit" class="fa-solid fa-pen-to-square" href="/settings/dashboards/@item.Uid"></a>
                        <span title="Delete" class="fa-solid fa-trash" @onclick="() => Remove(item)"></span>
                    </div>
                </Cell>
            </FenrusTableColumn>
        </Columns>
    </FenrusTable>
        
    </Body>
</FenrusPage>